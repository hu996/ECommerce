@model ECommerce.Models.Category
@{
    ViewData["Title"] = "Update";
}

<!-- Main content -->
<section class="content">
    <div class="container-fluid">
        <div class="row">
            <!-- left column -->
            <div class="col-md-6">
                <!-- general form elements -->
                <div class="card card-primary">
                    <div class="card-header">
                        <h3 class="card-title">Select Image For Slider</h3>
                    </div>
                    <!-- /.card-header -->
                    <!-- form start -->
                    <form asp-controller="Category" asp-action="Save" method="post" >
                        <div class="card-body">

                            <div class="form-group">

                                <div class="input-group">
                                    <div class="custom-file">
                                        <input type="hidden" asp-for="CategoryId"  class="custom-file-input" value="@Model.CategoryId" id="exampleInputFile">

                                    </div>
                                   
                                </div>
                            </div>
                            <div class="form-group">
                                <label>Category Name</label>
                                <input type="text" class="form-control" asp-for=" CategoryName" value="@Model.CategoryName" placeholder="Enter Category Name">
                            </div>

                        </div>
                        <!-- /.card-body -->

                        <div class="card-footer">
                            <input type="submit" class="btn btn-primary"></input>
                        </div>
                    </form>
                </div>
            </div>
      </div>
       </div>
</section>


